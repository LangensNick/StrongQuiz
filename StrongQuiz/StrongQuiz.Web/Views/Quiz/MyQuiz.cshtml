@model ICollection<StrongQuiz.Models.ViewModel.QuizOverview_VM>
@{
    ViewData["Title"] = "MyQuiz";
}

<h1>MyQuiz</h1>
<section class="details-card">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card-content">
                        <div class="card-img">
                            <img src="@item.ImageUrl" alt="">
                            @{
                                if (!item.QuizzedTaken)
                                {
                                    <span><h4>New!</h4></span>

                                };

                            }

                        </div>

                        <div class="card-desc">
                            <h3>@item.Name</h3>
                            <h3>@item.Difficulty</h3>
                            <p>
                                @item.Description
                            </p>
                            <a asp-action="Participate" asp-route-QuizId="@item.QuizId" class="btn-card" asp->Start</a>
                        </div>
                    </div>
                </div>
            }


             
        </div>
    </div>
</section>